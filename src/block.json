{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "blocks-course/text-box",
	"version": "0.1.0",
	"title": "Textbox",
	"category": "text",
	"description": "A box of text.",
	"keywords": ["text", "textbox", "paragraph", "box"],
	"supports": {
		"html": false,
		"color": {
			"text": true,
			"background": true,
			"gradients": true
		}
	},
	"textdomain": "text-box",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"attributes": {
		"alignment": {
			"type": "string",
			"default": "left"
		},
		"gradient": {	
			"type": "string",
			"default": "vivid-cyan-blue-to-vivid-purple"
		},
		"text": {
			"type": "string",
			"source": "html",
			"selector": "h4"
		},
		"textColor": {
			"type": "string",
			"default": "custom-yellow"
		}		
	}
}